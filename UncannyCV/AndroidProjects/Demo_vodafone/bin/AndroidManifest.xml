<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uncannyvision.apps.demo_vodafone_similarity_and_recognition"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="com.uncannyvision.apps.imagerecognitiondemo.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uncannyvision.apps.imagerecognitiondemo.CameraActivity"
            android:label="@string/cameraRunName"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.uncannyvision.apps.imagerecognitiondemo.ConsoleActivity"
            android:label="@string/consoleRunName"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.uncannyvision.apps.imagerecognitiondemo.SettingsActivity"
            android:label="@string/settingsLabel" >
        </activity>
        <activity
            android:name="com.uncannyvision.apps.imagerecognitiondemo.DialogActvity"
            android:theme="@style/Theme.Sherlock.Dialog" >
        </activity>
    </application>

</manifest>